[
  {
    "bindings": {
      // russian layout
      "ctrl-х": "vim::NormalBefore"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-j": "terminal_panel::ToggleFocus"
    }
  },
  {
    "context": "vim_mode",
    "bindings": {
      "ctrl-j": "terminal_panel::ToggleFocus"
    }
  },
  {
    "context": "vim_mode == normal",
    "bindings": {
      "ctrl-[": "workspace::Save",
      ", p f": "file_finder::Toggle",
      ", p p": "projects::OpenRecent",
      ", b": "tab_switcher::Toggle",
      ", ,": "workspace::ActivatePreviousPane",
      "alt-, p f": "file_finder::Toggle",
      "alt-, p p": "projects::OpenRecent",
      // russian layout
      "о": "vim::Down",
      "л": "vim::Up",
      "д": "vim::Left",
      "т": "vim::Right",
      "щ": "vim::InsertLineBelow"
    }
  },
  {
    "context": "vim_mode == insert",
    "bindings": {
      "alt-, p f": "file_finder::Toggle",
      "alt-, p p": "projects::OpenRecent",
      "alt-ctrl-i": "copilot::Suggest",
      "alt-b": "editor::MoveLeft",
      "alt-f": "editor::MoveRight",
      "alt-e": "editor::MoveToEndOfLine",
      "alt-a": "editor::MoveToBeginningOfLine",
      "ctrl-p": "editor::MoveUp",
      "ctrl-n": "editor::MoveDown"
    }
  }
]
